* album
* v0.18
* 增加预览图模式
* 2014-08-19
*/

/*1：普通*/
.album_ordinary{position:fixed !important;left:0;top:0;width:100%;height:100%;z-index:99;background:url(/web/img/black.6.png);background:rgba(0,0,0,.8)}
.album_ordinary .album_cell{float:none;width:100%;margin-right:0;text-align:center;}
.album_ordinary .album_cell img{vertical-align:middle;width:auto;max-height:100%;max-width:100% !important;}
.album_ordinary .album_cell p{line-height:22px;color:#fff;font-size:16px;}
.album_ordinary .album_btns_bar{position:absolute;left:0;top:0;width:96%;height:50%;margin-bottom:-50px;
color: #ffffff;z-index:99;padding:1em 2%;}
.album_ordinary .album_btns{position:absolute;bottom:0;float:left;margin:0 1em;width:20px;height:20px;cursor:pointer;background-repeat:no-repeat;background-image: url(album.png);}
.album_ordinary .album_prev{left:20px;background-position:-56px -12px;}
.album_ordinary .album_next{right:20px;background-position:-144px -12px;}
.album_ordinary .album_close{right:20px;top:20px;float:right;background-position:-12px -12px;}
.album_ordinary .album_prev:hover{background-position:-56px -57px;}
.album_ordinary .album_next:hover{background-position:-144px -57px;}
.album_ordinary .album_btns_bar .album_close:hover{background-position:-12px -57px;}

/*2：预览*/
.album_preview .slide_nav{width:100%;left:0;top:50%;}
.album_preview .slide_nav a{display:none;position:absolute;top:-28px;width:80px;height:55px;border:4px solid #ffd643;cursor:pointer;}
.album_preview .slide_nav img{width:100%;height:100%;}
.album_preview .slide_nav .nav_prev{display:block;left:10%;}
.album_preview .slide_nav .nav_next{display:block;right:10%;}
.album_preview .album_close{position:absolute;width:39px;height:38px;cursor:pointer;background-position:0 -88px;z-index:99;margin:0;	background-image: url(album.png);}
.album_preview .album_pages{position:absolute;top:20px;right:60px;font-size:14px;color:#fabd00;line-height:38px;margin:0 1em;}


@media all and ( max-width:64em ){

.album_ordinary{background:#000;}
.album_ordinary .album_cell p{position:absolute;left:0;bottom:60px;width:100%;}
.album_ordinary .album_btns_bar{height:auto;top:auto;bottom:0;margin-bottom:0;
background: #000000;
background: -moz-linear-gradient(top, #303130 0%, #000101 100%);
background: -webkit-gradient(linear, left top, left bottom, color-stop(0%,#303130), color-stop(100%,#000101));
border-top: 1px solid #42403f;}
.album_ordinary .album_btns_bar .album_btns{position:static;}
.album_ordinary .album_prev{left:20px;}
.album_ordinary .album_next{right:20px;}
.album_ordinary .album_close{right:20px;top:20px;}
.album_preview .slide_nav .nav_prev,.album_preview .slide_nav .nav_next{display:none;}


}
