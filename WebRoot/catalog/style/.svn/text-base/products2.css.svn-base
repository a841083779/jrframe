@charset "utf-8";
/* CSS Document */
.nc_channT{ float:left; height:84px; line-height:84px; font-size:24px; font-weight:bold; color:#636363;}

/*资讯*/
.pc_hotpro{ padding-bottom:10px;}
.pc_hotpro li{ width:90px; float:left; margin:10px 0px 0px 9px;}
.pc_hotpro li img{ width:88px; height:66px;border:1px solid #a09f9f;}
.pc_hotpro li .pchot_img{ margin-bottom:3px;}
.pc_hotpro li .pchot_brand{ width:100%;white-space:nowrap;text-overflow:ellipsis;overflow:hidden;}
.pc_hotpro li .pchot_name{ width:100%;white-space:nowrap;text-overflow:ellipsis;overflow:hidden;}

.pc_hotbrand{ padding-bottom:10px;}
.pc_hotbrand li{ width:55px; padding-left:7px; background:url(../images/dian.gif) no-repeat left; float:left; margin:10px 0 0 7px;white-space:nowrap;text-overflow:ellipsis;overflow:hidden;}

.pc_news_list {border-top:1px solid #eaeaea;}
.pc_news_list li{ float:left; width:100%; height:115px; overflow:hidden; position:relative; border-bottom:1px solid #eaeaea; padding:15px 0;}
.pc_news_list li img{ float:left; width:175px; height:115px; margin-right:10px;}
.pc_news_list li .pc_news_title{ font-size:18px; font-weight:bold; margin-bottom:3px;}
.pc_news_list li .pc_news_sum{ line-height:22px; height:44px; overflow:hidden; }
.pc_news_list li .pc_news_time{ color:#999; margin-bottom:3px;}
.pc_news_list li .pc_news_tag a{ display:inline-block; height:22px; line-height:22px; background:url(../images/tagbg_03.gif) repeat-x 0 0; padding:0 10px; color:#01569a;}
.pc_news_list li .pc_more{ display:block; width:70px; height:20px; line-height:20px; background:url(../images/pmore_bg_06.gif) repeat-x 0 0; border:1px solid #ddd; text-align:center; position:absolute; right:5px; bottom:18px;}

/*图片*/
.comBox01 .hd .pc_more{ float:right; padding-right:5px; color:#fff;}

.pcpic_val{ width:100%; overflow:hidden;}
.pc_piclist{ width:110%;}
.pc_piclist li{ float:left; width:232px; margin:0 10px 10px 10px;}
.pc_piclist li .pcpic_img img{ width:230px; height:172px; border:1px solid #ddd;}
.pc_piclist li .pcpic_name{ width:100%;white-space:nowrap;text-overflow:ellipsis;overflow:hidden; margin-top:8px;}
.cp_brandmore{ position:relative;}
.comBox .cp_brandmore .cp_bmore{ display:block; position:absolute; background:url(../images/jiantou_pc.gif) no-repeat right; padding-right:14px; font-size:12px; right:10px; top:0px;}

/*口碑*/
.pc_dlslist{ margin:0 5px;}
.pc_dlslist li{ float:left; width:100%; border-bottom:1px dotted  #ddd;white-space:nowrap;text-overflow:ellipsis;overflow:hidden;}
.pc_dlslist li a{ display:block; height:32px; line-height:32px;}
.pc_koubeimt{ margin-top:30px;}