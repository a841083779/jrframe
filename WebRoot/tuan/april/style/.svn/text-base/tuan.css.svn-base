@charset "utf-8";
html,body { overflow-x:visible;}
body { cursor:default;}
.pb20 { padding-bottom:20px;}
.list { width:100%; float:left;}
.list li { width:100%; float:left;}
.visit_21sun { height:31px; overflow:hidden;}

.banner { background:#ebebeb url(../images/big_banner.gif) center top no-repeat; width:100%; height:428px; overflow:hidden; clear:both;}
.banner .contain980 { height:428px; position:relative; overflow:hidden;}
.banner .contain980 p.time { font:100 12px/20px 微软雅黑; color:#ff4b10; position:absolute; left:608px; top:277px; }
a.yugao { display:block; width:115px; height:90px; position:absolute; left:849px; top:145px; background:url(/images/blank.gif); }

.tuan-con { width:100%; clear:both; background:#ebebeb url(../images/containbg.gif) center top no-repeat;}
.zc { width:500px; float:left; padding-left:45px;}
.zc strong { display:block; font:100 18px/44px 微软雅黑; color:#fff;}
.zc ul { width:100%; float:left;}
.zc ul li { width:auto; height:30px; font:100 14px/30px 微软雅黑; color:#2a2a2a; float:left; background-color:#ff9500; white-space:nowrap; padding:0px 16px;}
.zc ul li.odd { background-color:#ffa800;}
.zc ul li a { color:#333!important;}

#scroll { width:980px; height:243px; overflow:hidden; float:left; position:relative;}
#scroll .hd { width:100%; height:0px; position:absolute; left:0px; top:0px; z-index:10;}
#scroll .hd ul { display:none;}
#scroll .hd a { display:block; width:28px; height:62px; background:url(../images/scroll_btn.gif) no-repeat; cursor:pointer; position:absolute; top:62px;}
#scroll .hd a.newsImgprev { background-position:0px 0px; left:3px;}
#scroll .hd a.newsImgnext { background-position:-28px 0px; right:3px;}
#scroll .bd { width:900px; height:204px; margin:0 auto; position:relative; z-index:20; overflow:hidden;}
#scroll .bd ul { width:950px; height:204px; float:left;}
#scroll .bd ul li { width:206px; height:204px; float:left; margin-right:25px; background-color:#fff; position:relative;}
#scroll .bd ul li span.ico { display:block; width:70px; height:70px; position:absolute; right:0px; top:0px;}
span.shijia { background:url(../images/ico_shijia.gif) no-repeat;}
span.baokuan { background:url(../images/ico_baokuan.gif) no-repeat;}
span.cuxiao { background:url(../images/ico_cuxiao.gif) no-repeat;}
#scroll .bd ul li .pic { line-height:0px; font-size:0px;}
#scroll .bd ul li .con { height:48px; padding:0px 10px;}
#scroll .bd ul li .con h3 { font:100 20px/22px 微软雅黑; height:26px; color:#c91202;}
#scroll .bd ul li .con span { display:block; line-height:18px;}
#scroll .bd ul li a.btn { width:69px; height:21px; line-height:20px; padding-left:11px; background:url(../images/tuan_btn01.gif) no-repeat; float:right; margin-right:17px; _display:inline; color:#656565;}

.brandShow { width:100%; height:457px; clear:both; position:relative; overflow:hidden;}
.brandShow .bs { width:190px; height:188px; position:absolute; text-align:center;}
.brandShow .bs h2 { font:100 37px/40px 微软雅黑; color:#fff; margin-bottom:10px;}
.brandShow .bs p { font:100 12px/16px 微软雅黑; color:#fff; /*text-align:left;*/}
.brandShow .bs a.detailBtn { display:block; width:76px; height:22px; position:absolute; left:50%; margin-left:-38px; bottom:0px; overflow:hidden; text-indent:-9999px;}

.brandShow .sem { left:90px; top:90px;}
.brandShow .sem h2,.brandShow .sem p { color:#4764a7;}
.brandShow .sany { left:255px; top:245px;}
.brandShow .hnzw { width:265px; left:374px; top:87px;}
.brandShow .doosan { width:155px; left:582px; top:242px;}
.brandShow .doosan h2 { margin-bottom:15px;}
.brandShow .wge { width:260px; height:182px; left:682px; top:88px; }
.brandShow .wge h2 { margin-bottom:15px;}

.hnzw .title h2,.wge .title h2 { font-weight:bold!important; padding-left:30px;}

.tuanParts { width:100%; float:left;}
.tuanParts .title { height:auto;}
.tuanParts .title h2 { width:auto; float:left; font:100 20px/68px 微软雅黑; color:#161616;}
.tuanParts .title span.more { width:auto; float:right; font:100 14px/68px 微软雅黑; color:#000;}
.tuanParts .content { width:930px; padding:25px; float:left; background-color:#d9e4ff; overflow:hidden;}

.tuanParts ul.list li { width:220px; height:auto; margin-right:15px; position:relative;}
.tuanParts ul.list li span.ico { display:block; width:70px; height:70px; position:absolute; right:0px; top:0px;}
.tuanParts ul.list li img { display:block; width:220px; height:220px;}
.tuanParts ul.list li h3 { width:100%; height:28px; font:100 14px/28px 微软雅黑; color:#808080; margin-bottom:5px;}
.tuanParts ul.list li p { width:138px; float:left; line-height:16px; color:red;}
.tuanParts ul.list li a.btn { width:77px; height:25px; float:right; background:url(../images/tuan_btn02.gif) no-repeat; text-align:center; font:100 12px/24px 微软雅黑; color:#fff;}

.sem ul.list { width:470px;}

.sany ul.list,.doosan ul.list,.hnzw ul.list,.wge ul.list { width:950px;}
.sany ul.list li p,.doosan ul.list li p,.hnzw ul.list li p,.wge ul.list li p { font:700 14px/20px 微软雅黑;}

.bottomAds { padding:20px 0px;}

.proFoot { padding:15px 0px;}
.proFoot .New_website { display:none;}
