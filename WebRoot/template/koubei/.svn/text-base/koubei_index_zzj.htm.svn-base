<#assign loader_order = query(" SELECT top 3 a.factoryname,a.name,a.catalogname,a.file_name,b.allcount,a.id,a.img2 from (select  factoryname,name,catalogname,file_name,id,img2 from pro_products where is_show=1 AND catalognum LIKE '%101002%' )as a INNER  JOIN ( SELECT COUNT(product_id) as allcount,product_id  FROM pro_comments  GROUP BY product_id  ) as b ON a.id=b.product_id  ORDER BY  b.allcount desc")> <#-- 装载机排行 -->
<#if loader_order??&&(loader_order?size>0)>
     <#list loader_order as oneGrab>
        <li><a href="/list/${oneGrab.id?c}.htm" title="${oneGrab.factoryname}${oneGrab.name}${oneGrab.catalogname}"><img src="http://product.21-sun.com/uploadfiles/${oneGrab.img2}" alt="${oneGrab.factoryname}${oneGrab.name}${oneGrab.catalogname}" /></a><a href="/list/${oneGrab.id?c}.htm" title="${oneGrab.factoryname}${oneGrab.name}${oneGrab.catalogname}"><strong class="n">${oneGrab.factoryname}${oneGrab.name} ${oneGrab.catalogname}</strong></a>
          <div class="info">评论数：${oneGrab.allcount?c}条 | <a href="/compare_${oneGrab.id?c}.htm" target="_blank">对比</a></div>
        </li>  
      </#list>
</#if>

 