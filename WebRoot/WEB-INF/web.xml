<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
	http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">

	<welcome-file-list>
		<welcome-file>index.htm</welcome-file>
		<welcome-file>index.shtm</welcome-file>
		<welcome-file>index.jsp</welcome-file>
		<welcome-file>login.jsp</welcome-file>
	</welcome-file-list>


	<filter>
		<filter-name>Set Character Encoding</filter-name>
		<filter-class>
			com.jerehnet.filter.SetCharacterEncodingFilter
		</filter-class>
		<init-param>
			<param-name>encoding</param-name>
			<param-value>UTF-8</param-value>
		</init-param>
	</filter>


	<filter-mapping>
		<filter-name>Set Character Encoding</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>

	<filter>
		<filter-name>UrlFilter</filter-name>
		<filter-class>com.jerehnet.filter.UrlFilter</filter-class>
	</filter>

	<filter-mapping>
		<filter-name>UrlFilter</filter-name>
		<url-pattern>/backend/*</url-pattern>
	</filter-mapping>

	<filter>
		<filter-name>UrlFilterMember</filter-name>
		<filter-class>com.jerehnet.filter.UrlFilterMember</filter-class>
	</filter>

	<filter-mapping>
		<filter-name>UrlFilterMember</filter-name>
		<url-pattern>/admin/*</url-pattern>
	</filter-mapping>
	
